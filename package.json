{
  "name": "halalchain-ecommerce-marketplace",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=apps/frontend && npm run build --workspace=apps/backend",
    "dev": "concurrently \"npm run dev --workspace=apps/frontend\" \"npm run start:dev --workspace=apps/backend\"",
    "start": "npm run start --workspace=apps/frontend & npm run start:prod --workspace=apps/backend",
    "lint": "npm run lint --workspace=apps/frontend && npm run lint --workspace=apps/backend",
    "test": "npm run test --workspace=apps/backend",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:seed": "npx prisma db seed"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "concurrently": "^8.2.2",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "prisma": "^6.16.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "framer-motion": "^12.23.22",
    "swr": "^2.3.6"
  }
}
